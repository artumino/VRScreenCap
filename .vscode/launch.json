{
    "configurations": [
        {
            "name": "Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/vr-screen-cap.exe",
            "cwd": "${workspaceRoot}/target/debug",
            "preLaunchTask": "build",
            "environment": [
                {
                    "name": "RUST_BACKTRACE",
                    "value": "1"
                },
                {
                    "name": "RUST_LOG",
                    "value": "trace"
                }
            ]
        },
        {
            "name": "Release",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/release/vr-screen-cap.exe",
            "cwd": "${workspaceRoot}/target/release",
            "preLaunchTask": "build-release",
            "environment": [
                {
                    "name": "RUST_BACKTRACE",
                    "value": "1"
                },
                {
                    "name": "RUST_LOG",
                    "value": "trace"
                }
            ]
        },
    ],
}